                    </DoubleAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Ellipse6"
                                                   Storyboard.TargetProperty="Height">
                        <SplineDoubleKeyFrame KeyTime="00:00:00.00" Value="15"/>
