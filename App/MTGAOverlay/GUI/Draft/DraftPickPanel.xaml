<UserControl x:Class="MindSculptor.App.MtgaOverlay.GUI.Draft.DraftPickPanel"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MindSculptor.App.MtgaOverlay.GUI.Draft"
             mc:Ignorable="d" 
             d:DesignHeight="376" d:DesignWidth="296">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="376*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="269*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="CardNameDisplay" FontSize="10" Text="CardName" Foreground="AntiqueWhite" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,5,0"/>
        <TextBlock x:Name="CountDisplay" FontSize="14" Text="0*" Foreground="AntiqueWhite" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="0" Grid.ColumnSpan="1" Margin="0,0,0,2"/>
    </Grid>
</UserControl>
